<h1>We got all the authors</h1>

<table>
  <thead>
    <th>Name</th>
    <th>Homepage</th>
    <th></th>
  </thead>
  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= link_to author.homepage, author.homepage %></td>
        <td><%= link_to 'Details', author_path(author) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_author_path %>
